<% layout("/layouts/boilerplate") %>
<!-- <body> -->
<div class="row justify-content-md-center">
  <div class="col-8">
    <br /><br />
    <h1>Edit your Listing</h1>
    <form
      method="post"
      action="/listings/<%= list._id%>?_method=PUT"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mt-3 mb-3">
        <!--mb-3 = margin_bottom-->
        <label for="title" class="form-label">Title</label>
        <input
          name="listing[title]"
          value="<%= list.title%>"
          type="text"
          class="form-control"
        />
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          id=""
          cols="30"
          rows="10"
          class="form-control"
        >
          <%= list.description %></textarea
        >
      </div>

      <div class="mb-3">
        <h4>Original Listing Image</h4>
        <img src="<%= originalImageUrl %>" alt="image not found">
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Uplad new image</label>
        <input name="listing[image]" type="file" class="form-control" />
      </div>

      <div class="row">
        <div class="col-4 mb-3">
          <label for="price" class="form-label">Price</label>
          <input
            name="listing[price]"
            value="<%= list.price%>"
            type="number"
            class="form-control"
          />
        </div>
        <div class="mb-3 col-8">
          <label for="country" class="form-label">Country</label>
          <input
            name="listing[country]"
            value="<%= list.country%>"
            type="text"
            class="form-control"
          />
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          name="listing[location]"
          value="<%= list.location%>"
          type="text"
          class="form-control"
        />
      </div>
      <button class="btn btn-dark add-btn mb-3">Edit</button>
    </form>
  </div>
</div>
